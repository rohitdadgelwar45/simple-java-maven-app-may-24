pipeline {
    agent any

    tools{
        maven "maven"
    }

    stages {

         stage('Git Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'Github', url: 'https://github.com/rohitdadgelwar45/simple-java-maven-app-may-24.git']])
            }
        }

        stage('build') {
            steps {
                echo 'build'
            }
        }

       
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post { 
                always { 
                    junit '**/target/surefire-reports/TEST-com.mycompany.app.AppTest.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deploy on Ec-2'
            }
        }
    }
}
